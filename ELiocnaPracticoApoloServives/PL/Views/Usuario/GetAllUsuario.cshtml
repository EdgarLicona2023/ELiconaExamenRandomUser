
@model ML.Usuario
@{
    ViewData["Title"] = "GetAllUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <section>
        <h2>Módulo de Usuarios</h2>
        <p>
            En este modulo puedes visualizar a los usuarios existentes,<br />
            agregar, modificar y eliminar un usuario
        </p>
    </section>
    <section>

        <div style="float:right;">
            <div class="row">
                @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success bi bi-person-plus-fill" })

            </div>
        </div>
    </section>
    <hr />
    <section>
        @if (Model.Usuarios == null)
        {
            <div class="row">
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            </div>
        }
        else
        {


            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <td class="text-center" style=" font-weight:bold;">Editar</td>

                        <td class="visually-hidden">Id_Usuario</td>
                        <td class="text-center" style="font-weight:bold;">User Name</td>
                        <td class="text-center" style=" font-weight:bold;">Nombre completo</td>
                        <td class="text-center" style=" font-weight:bold;">Email</td>
                        <td class="text-center" style=" font-weight:bold;">Password</td>
                        <td class="text-center" style=" font-weight:bold;">Fecha Nacimiento</td>
                        <td class="text-center" style=" font-weight:bold;">Telefono</td>
                        <td class="text-center" style=" font-weight:bold;">Imagen</td>

                        <td class="visually-hidden">ISexo</td>
                        <td class="text-center" style=" font-weight:bold;">Sexo</td>

                        <td class="visually-hidden">IdEdoCivil</td>
                        <td class="text-center" style=" font-weight:bold;">Estado Civil</td>

                        <td class="visually-hidden">IdPuesto</td>
                        <td class="text-center" style=" font-weight:bold;">Puesto</td>

                        <td class="visually-hidden">IdDepartamento</td>
                        <td class="text-center" style=" font-weight:bold;">Departamento</td>

                        <td class="visually-hidden">IdArea</td>
                        <td class="text-center" style=" font-weight:bold;">Area</td>

                        <td class="text-center" style=" font-weight:bold;">Eliminar</td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Usuario", new { IdUser = usuario.IdUser })"></a></td>

                            <td class="visually-hidden">@usuario.IdUser</td>
                            <td class="text-center">@usuario.UserName</td>
                            <td class="text-center">@usuario.Nombre, @usuario.ApellidoPaterno, @usuario.ApellidoMaterno</td>
                            <td class="text-center">@usuario.Email</td>
                            <td class="text-center">@usuario.Password</td>
                            <td class="text-center">@usuario.FechaNacimiento</td>
                            <td class="text-center">@usuario.Telefono</td>
                            @*                            <td class="text-center">@usuario.Imagen</td>
                    *@
                            <td> <img id="Img" src="data:image/*;base64,@usuario.Imagen" style="width:50px ; height:50px" /></td>

                            <td class="visually-hidden">@usuario.Sexo.IdSexo</td>
                            <td class="text-center">@usuario.Sexo.Sexos</td>

                            <td class="visually-hidden">@usuario.EstadoCivil.IdEstadoCivil</td>
                            <td class="text-center">@usuario.EstadoCivil.EstadoCivil</td>

                            <td class="visually-hidden">@usuario.Puesto.IdPuesto</td>
                            <td class="text-center">@usuario.Puesto.Puestos</td>

                            <td class="visually-hidden">@usuario.Departamento.IdDepartamento</td>
                            <td class="text-center">@usuario.Departamento.Departamentos</td>

                            <td class="visually-hidden">@usuario.Departamento.Areas.IdArea</td>
                            <td class="text-center">@usuario.Departamento.Areas.Areas</td>



                            <td class="text-center"><a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", "Usuario", new { IdUser = usuario.IdUser})" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>

                        </tr>
                    }
                </tbody>
            </table>

        }



    </section>
</div>

