@model ML.Libro
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <section>
        <h2>Módulo de Libro</h2>
        <p>
            En este modulo puedes visualizar a los libros existentes,<br />
            asi como, agregar, modificar y eliminar un libro
        </p>
    </section>
    <section>

        <div style="float:right;">
            <div class="row">
                @Html.ActionLink("Agregar", "Form", "Libro", htmlAttributes: new { @class = "btn btn-success bi bi-person-plus-fill" })
                @*localhost/Alumno/Form      *@


            </div>
        </div>
    </section>
    <hr />
    <section>
        @if (Model.Libros == null)
        {
            <div class="row">
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            </div>
        }
        else
        {


            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <td class="text-center" style=" font-weight:bold;">Editar</td>

                        <td class="visually-hidden">IdLibro</td>
                        <td class="text-center" style="font-weight:bold;">Libro</td>
                        <td class="text-center" style=" font-weight:bold;">Fecha Publicacion</td>
                        <td class="text-center" style=" font-weight:bold;">Costo</td>
                        <td class="visually-hidden">IdAutor</td>
                        <td class="text-center" style=" font-weight:bold;">Autor</td>
                        <td class="visually-hidden">IdEditorial</td>
                        <td class="text-center" style=" font-weight:bold;">Editorial</td>
                       
                    </tr>
                </thead>
                <tbody>

                    @foreach (ML.Libro libro in Model.Libros)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Libro", new { IdLibro = libro.IdLibro })"></a></td>

                            <td class="visually-hidden">@libro.IdLibro</td>
                            <td class="text-center">@libro.Nombre</td>
                            <td class="text-center">@libro.FechaPublicacion</td>
                            <td class="text-center">@libro.Costo</td>

                            <td class="visually-hidden">@libro.Autor.IdAutor</td>
                            <td class="text-center">@libro.Autor.NombreAutor</td>

                            <td class="visually-hidden">@libro.Editorial.IdEditorial</td>
                            <td class="text-center">@libro.Editorial.NombreEditorial</td>



                            <td class="text-center"><a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", "Libro", new { IdLibro = libro.IdLibro})" onclick="return confirm('Estas seguro que deseas eliminar este libro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>

        }



    </section>
</div>


