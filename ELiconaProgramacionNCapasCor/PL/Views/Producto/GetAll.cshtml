@model ML.Producto
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <section>
        <h2>Módulo de Producto</h2>
        <p>
            En este modulo puedes visualizar a los productos existentes,<br />
            agregar, modificar y eliminar un producto
        </p>
    </section>
    <section>

        <div style="float:right;">
            <div class="row">
                @Html.ActionLink("Agregar", "Form", "Producto", htmlAttributes: new { @class = "btn btn-success bi bi-person-plus-fill" })
                @*localhost/Alumno/Form      *@


            </div>
        </div>
    </section>
    <hr />
    <section>
        @if (Model.Productos == null)
        {
            <div class="row">
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            </div>
        }
        else
        {


            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <td class="text-center" style=" font-weight:bold;">Editar</td>

                        <td class="visually-hidden">IdProducto</td>
                        <td class="text-center" style="font-weight:bold;">Producto</td>
                        <td class="text-center" style=" font-weight:bold;">Precio</td>
                        <td class="text-center" style=" font-weight:bold;">Cantidad</td>
                        <td class="text-center" style=" font-weight:bold;">Descripcion</td>
                        <td class="visually-hidden">IdProveedor</td>
                        <td class="text-center" style=" font-weight:bold;">Proveedor</td>
                        <td class="text-center" style=" font-weight:bold;">Tel. Proveedor</td>
                        <td class="visually-hidden">IdDepartamento</td>
                        <td class="text-center" style=" font-weight:bold;">Departamento</td>
                        <td class="visually-hidden">IdArea</td>
                        <td class="text-center" style=" font-weight:bold;">Area</td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (ML.Producto producto in Model.Productos)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Producto", new { IdProducto = producto.IdProducto })"></a></td>

                            <td class="visually-hidden">@producto.IdProducto</td>
                            <td class="text-center">@producto.NombreProducto</td>
                            <td class="text-center">@producto.PrecioUnitario</td>
                            <td class="text-center">@producto.Stock</td>
                            <td class="text-center">@producto.Descripcion</td>

                            <td class="visually-hidden">@producto.Proveedor.IdProveedor</td>
                            <td class="text-center">@producto.Proveedor.NombreProveedor</td>
                            <td class="text-center">@producto.Proveedor.TelefonoProveedor</td>

                            <td class="visually-hidden">@producto.Departamento.IdDepartamento</td>
                            <td class="text-center">@producto.Departamento.NombreDepartamento</td>

                            <td class="visually-hidden">@producto.Departamento.Area.IdArea</td>
                            <td class="text-center">@producto.Departamento.Area.NombreArea</td>


                            <td class="text-center"><a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", "Producto", new { IdProducto = producto.IdProducto})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
                        </tr>
                    }
                </tbody>
            </table>

        }



    </section>
</div>

