@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container">
    <section>
        <h2>Módulo de Usuarios</h2>
        <p>
            En este modulo puedes visualizar a los usuarios existentes,<br />
            agregar, modificar y eliminar un usuario
        </p>
    </section>
    <section>

        <div style="float:right;">
            <div class="row">
                @Html.ActionLink("Agregar", "Form", "Usuario", htmlAttributes: new { @class = "btn btn-success bi bi-person-plus-fill" })
               
            </div>
        </div>
    </section>
    <hr />
    <section>
        @if (Model.Usuarios == null)
        {
            <div class="row">
                <div class="alert alert-danger" role="alert">
                    @ViewBag.Message
                </div>
            </div>
        }
        else
        {


            <table class="table table-bordered table-responsive">
                <thead>
                    <tr>
                        <td class="text-center" style=" font-weight:bold;">Editar</td>

                        <td class="visually-hidden">Id_Usuario</td>
                        <td class="text-center" style="font-weight:bold;">User Name</td>
                        <td class="text-center" style=" font-weight:bold;">Nombre completo</td>
                       @* <td class="text-center" style=" font-weight:bold;">Apellido Paterno</td>
                        <td class="text-center" style=" font-weight:bold;">Apellido Materno</td>*@
                        <td class="text-center" style=" font-weight:bold;">Email</td>
                        <td class="text-center" style=" font-weight:bold;">Password</td>
                        <td class="text-center" style=" font-weight:bold;">Fecha Nacimiento</td>
                        <td class="text-center" style=" font-weight:bold;">Sexo</td>
                        <td class="text-center" style=" font-weight:bold;">Telefono</td>
                        <td class="text-center" style=" font-weight:bold;">Celular</td>
                        <td class="text-center" style=" font-weight:bold;">Curp</td>
                        <td class="visually-hidden">IdRol</td>
                        <td class="text-center" style=" font-weight:bold;">Rol</td>
                        <td class="visually-hidden">IdDireccion</td>
                        <td class="text-center" style=" font-weight:bold;">Direccion</td>
                       @* <td class="text-center" style=" font-weight:bold;">Numero Exterior</td>
                        <td class="text-center" style=" font-weight:bold;">Numero Interior</td>*@
                        <td class="visually-hidden">IdColonia</td>
                        <td class="text-center" style=" font-weight:bold;">Colonia</td>
                        <td class="text-center" style=" font-weight:bold;">CP</td>
                        <td class="visually-hidden">IdMunicipio</td>
                        <td class="text-center" style=" font-weight:bold;">Municipio</td>
                        <td class="visually-hidden">IdEstado</td>
                        <td class="text-center" style=" font-weight:bold;">Estado</td>
                        <td class="visually-hidden">IdPais</td>
                        <td class="text-center" style=" font-weight:bold;">Pais</td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                        <tr>
                            <td class="text-center"><a class="btn btn-warning bi bi-pencil-square" href="@Url.Action("Form", "Usuario", new { Id_Usuario = usuario.Id_Usuario })"></a></td>

                            <td class="visually-hidden">@usuario.Id_Usuario</td>
                            <td class="text-center">@usuario.UserName</td>
                            <td class="text-center">@usuario.NombreUsuario, @usuario.ApellidoPaternoUsuario, @usuario.ApellidoMaternoUsuario</td>
                       @*     <td class="text-center">@usuario.ApellidoPaternoUsuario</td>
                            <td class="text-center">@usuario.ApellidoMaternoUsuario</td>*@
                            <td class="text-center">@usuario.Email</td>
                            <td class="text-center">@usuario.Password</td>
                            <td class="text-center">@usuario.FechaNacimiento</td>
                            <td class="text-center">@usuario.Sexo</td>
                            <td class="text-center">@usuario.Telefono</td>
                            <td class="text-center">@usuario.Celular</td>
                            <td class="text-center">@usuario.Curp</td>

                            <td class="visually-hidden">@usuario.Rol.IdRol</td>
                            <td class="text-center">@usuario.Rol.Nombre</td>

                            <td class="visually-hidden">@usuario.Direccion.IdDireccion</td>
                            <td class="text-center">@usuario.Direccion.Calle, @usuario.Direccion.NumeroExterior, @usuario.Direccion.NumeroInterior </td>
                           @* <td class="text-center">@usuario.Direccion.NumeroExterior</td>
                            <td class="text-center">@usuario.Direccion.NumeroInterior</td>*@

                            <td class="visually-hidden">@usuario.Direccion.Colonia.IdColonia</td>
                            <td class="text-center">@usuario.Direccion.Colonia.NombreColonia</td>
                            <td class="text-center">@usuario.Direccion.Colonia.CodigoPostal</td>

                            <td class="visually-hidden">@usuario.Direccion.Colonia.Municipio.IdMunicipio</td>
                            <td class="text-center">@usuario.Direccion.Colonia.Municipio.NombreMunicipio</td>

                            <td class="visually-hidden">@usuario.Direccion.Colonia.Municipio.Estado.IdEstado</td>
                            <td class="text-center">@usuario.Direccion.Colonia.Municipio.Estado.NombreEstado</td>

                            <td class="visually-hidden">@usuario.Direccion.Colonia.Municipio.Estado.Pais.IdPais</td>
                            <td class="text-center">@usuario.Direccion.Colonia.Municipio.Estado.Pais.NombrePais</td>


@*                            <td class="text-center"><a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", " Usuario", new { Id_Usuario = usuario.Id_Usuario})" onclick="return confirm('Estas seguro que deseas eliminar este registro?');"></a></td>
*@
                            <td class="text-center"><a class="btn btn-danger bi bi-trash" href="@Url.Action("Delete", "Usuario", new { Id_Usuario = usuario.Id_Usuario})" onclick="return confirm('¿Estas seguro que deseas eliminar este registro?');"></a></td>

                        </tr>
                    }
                </tbody>
            </table>

        }



    </section>
</div>

